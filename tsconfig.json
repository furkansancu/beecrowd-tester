{
    "compilerOptions": {
        "module": "CommonJS",
        "lib": ["ES6", "ES2021.String"],
        "rootDir": "./src",
        "outDir": "./dist",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": false,
        "declaration": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
    },
    "include": [ "src" ],
    "exclude": [ "tests", "node_modules" ]
}